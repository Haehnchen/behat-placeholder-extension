{
    "name": "espend/behat-placeholder-extension",
    "description": "Behat placeholder extension",
    "authors": [
        {
            "name": "Daniel Espendiller",
            "email": "daniel@espendiller.net"
        }
    ],    
    "keywords": ["BDD", "Behat", "Symfony", "Context", "Extension"],
    "type": "library",
    "license": "MIT",
    "require": {
        "php": ">=8.0",
        "behat/behat": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^12.0",
        "symfony/property-access": "~3.0",
        "behat/symfony2-extension": "^2.1",
        "doctrine/common": "~2.0"
    },
    "suggest": {
        "behat/symfony2-extension": "Allows usages for Doctrine context",
        "doctrine/common": "Needed to support Doctrine context"
    },
    "autoload": {
        "psr-4": {
            "espend\\Behat\\PlaceholderExtension\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "espend\\Behat\\PlaceholderExtension\\Tests\\": "tests/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}
